{
  // This file is not used in compilation. It is here just for a nice editor experience.
  "extends": "@docusaurus/tsconfig",

  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@site/*": ["./*"],
      "@/*": ["./src/*"]
    },
    "types": [
      "@types/w3c-web-serial",
    ],
    "skipLibCheck": true,
  }
}
